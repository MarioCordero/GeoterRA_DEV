<!-- res/values/styles.xml -->
<resources>
    <!-- Define el tema blanco personalizado basado en Material Components -->
    <style name="AppLightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color de fondo principal -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Color principal del tema -->
        <item name="colorPrimary">@android:color/white</item>
        <!-- Color primario oscuro (puede ser igual al primario para mantener la consistencia) -->
        <item name="colorPrimaryDark">@android:color/white</item>
        <!-- Color de acento -->
        <item name="colorAccent">@android:color/black</item>
        <!-- Color del texto principal -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Color del texto secundario -->
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- Color del texto sobre color primario -->
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Color de fondo de la barra de estado -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Color de fondo de la barra de navegaciÃ³n -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>
</resources>

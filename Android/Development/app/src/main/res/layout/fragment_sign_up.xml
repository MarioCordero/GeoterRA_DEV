<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".fragments.SignUpFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="@drawable/gray_rectangle_rounded2"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="24dp"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/poppins_semibold" />

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="25dp"
            android:padding="14dp"

            android:background="@drawable/gray_rectangle_rounded2"
            android:drawableEnd="@drawable/baseline_account_circle_24"

            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:hint="@string/email"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:padding="14dp"

            android:background="@drawable/gray_rectangle_rounded2"
            android:drawableEnd="@drawable/baseline_lock_24"

            android:inputType="textPassword"
            android:autofillHints="password"
            android:hint="@string/password"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/togglePasswordLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txvTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="8dp"
                android:text="Show Password"
                android:fontFamily="@font/calibri_bold"
                android:textColor="@color/black"
                android:textSize="12sp"
                >
            </TextView>
            <CheckBox
                android:id="@+id/checkBoxTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-15dp"
                >
            </CheckBox>
        </LinearLayout>

        <EditText
            android:id="@+id/userFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:padding="14dp"

            android:background="@drawable/gray_rectangle_rounded2"
            android:drawableEnd="@drawable/baseline_drive_file_rename_outline_24"

            android:inputType="textPersonName"
            android:autofillHints="personName"
            android:hint="@string/name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/userLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:padding="14dp"

            android:background="@drawable/gray_rectangle_rounded2"
            android:drawableEnd="@drawable/baseline_drive_file_rename_outline_24"

            android:inputType="textPersonName"
            android:autofillHints="personName"
            android:hint="@string/lastname"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/userPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:padding="14dp"

            android:background="@drawable/gray_rectangle_rounded2"
            android:drawableEnd="@drawable/baseline_local_phone_24"

            android:inputType="phone"
            android:autofillHints="phone"
            android:hint="@string/contact_number"

            android:textColor="@color/black" />

        <Button
            android:id="@+id/createAccountB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/geoterra_yellow"
            android:text="@string/create_account"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/calibri_bold"
            android:text="Instituto de Investigaciones en IngenierÃ­a | REFORESTA"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

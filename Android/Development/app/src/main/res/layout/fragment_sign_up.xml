<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUpFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/gray_rectangle_rounded2"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="visible"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GeoterRa"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:autofillHints=""
                android:background="@drawable/gray_rectangle_rounded2"
                android:drawableRight="@drawable/baseline_account_circle_24"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:autofillHints=""
                android:background="@drawable/gray_rectangle_rounded2"
                android:drawableRight="@drawable/baseline_lock_24"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/userFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:autofillHints=""
                android:background="@drawable/gray_rectangle_rounded2"
                android:drawableRight="@drawable/baseline_drive_file_rename_outline_24"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:padding="14dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/userLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:autofillHints=""
                android:background="@drawable/gray_rectangle_rounded2"
                android:drawableEnd="@drawable/baseline_drive_file_rename_outline_24"
                android:hint="Apellidos"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/userPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_rectangle_rounded2"
                android:drawableEnd="@drawable/baseline_local_phone_24"
                android:hint="Número de contacto"
                android:inputType="numberDecimal"
                android:padding="14dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/createAccountB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                android:text="Crear cuenta"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Instituto de Investigaciones en Ingeniería | REFORESTA"
                android:textSize="12sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </FrameLayout>
</FrameLayout>

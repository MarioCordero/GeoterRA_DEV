      android:fontFamily="@font/poppins_semibold"
      android:textSize="25sp" />
    
    <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/geoterra_light_gray"
      />
    
    <!-- Chlorine -->

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.map.views.AnalysisView">
  
  <LinearLayout
    android:id="@+id/container_properties"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:paddingVertical="20dp"
    
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >
    
    <TextView
      android:id="@+id/label_properties_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      
      android:text="Desgloce de propiedades"
      android:textColor="@color/geoterra_deep_blue"
      
      android:fontFamily="@font/poppins_semibold"
      android:textSize="26sp"
      >
    </TextView>
    
    <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/geoterra_light_gray"
      />
    
    <TextView
      android:id="@+id/label_field_ph"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="pH Campo"
      android:textColor="@color/geoterra_light_gray"
      android:fontFamily="@font/poppins_semibold"
      android:textSize="22sp" />
    
    <TextView
      android:id="@+id/tv_field_ph"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:text="7.6"
      android:textColor="@color/black"
      android:fontFamily="@font/poppins_semibold"
      android:textSize="25sp" />
    
    <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/geoterra_light_gray"
      />
    
    <TextView
      android:id="@+id/label_field_conditions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Condiciones del Campo"
      android:textColor="@color/geoterra_light_gray"
      android:fontFamily="@font/poppins_semibold"
      android:textSize="22sp" />
    
    <TextView
      android:id="@+id/tv_field_conditions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sunny"
      android:textColor="@color/black"
      android:fontFamily="@font/poppins_semibold"
      android:textSize="25sp" />
    
    <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/geoterra_light_gray"
      />
    
    <TextView
      android:id="@+id/label_lab_ph"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_marginTop="10dp"
      android:text="pH Laboratorio"
      android:textColor="@color/geoterra_light_gray"
      android:fontFamily="@font/poppins_semibold"
      android:textSize="22sp" />
    
    <TextView
      android:id="@+id/tv_lab_ph"
      android:layout_width="match_parent"

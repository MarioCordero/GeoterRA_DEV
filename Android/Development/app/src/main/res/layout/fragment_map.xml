<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_page"
    tools:context=".ui.map.views.MapView">
    
    <FrameLayout
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      android:elevation="10dp" />

    <org.osmdroid.views.MapView
        android:id="@+id/MapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_filters"
        android:layout_width="50dp"
        android:layout_height="60dp"

        app:layout_constraintBottom_toTopOf="@id/btn_centerOnUser"
        app:layout_constraintStart_toStartOf="@id/btn_centerOnUser"

        android:backgroundTint="@color/lightBlack"
        app:cornerRadius="100dp"
        android:drawableTop="@drawable/baseline_layers_24"

        android:drawablePadding="0dp"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="10dp" />

    <Button
        android:id="@+id/btn_centerOnUser"

        android:layout_width="50dp"
        android:layout_height="60dp"

        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:backgroundTint="@color/lightBlack"
        app:cornerRadius="100dp"
        android:drawableTop="@drawable/baseline_location_searching_24"

        android:drawablePadding="0dp"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
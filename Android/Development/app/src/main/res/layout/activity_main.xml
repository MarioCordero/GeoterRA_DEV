<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:backgroundTint="@color/white">

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/white_rectangle_rounded2"
                android:elevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Acerca de nosotros"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    >
                </TextView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/droneImage"
                    android:layout_width="170dp"
                    android:layout_height="300dp"

                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                    android:src="@drawable/droneview"
                    android:elevation="10dp"
                    android:layout_gravity="left"
                    android:scaleType="centerCrop">

                </com.google.android.material.imageview.ShapeableImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="100dp"
                    android:text="GeoterRA: optimiza decisiones en proyectos geotérmicos."
                    android:lineSpacingExtra="8sp"
                    android:textAlignment="textStart"
                    android:textSize="15sp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:text="Proporcionamos información precisa, reducimos riesgos y maximizamos eficiencia. Equipo multidisciplinario, promovemos energías renovables y desarrollo sostenible."
                    android:textSize="17sp"
                    android:justificationMode="inter_word"
                    >
                </TextView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rockLake"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"

                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                    android:src="@drawable/rocklake"
                    android:elevation="10dp"
                    android:layout_gravity="left"
                    android:scaleType="centerCrop">

                </com.google.android.material.imageview.ShapeableImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8sp"

                    android:text="GeoterRA recopila datos geológicos de múltiples fuentes, incluyendo estudios de campo realizados por expertos y contribuciones de usuarios a través de la aplicación móvil. Integrando datos de bases de datos geológicas existentes, garantizamos una colección completa."
                    android:textSize="15sp">
                </TextView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rocks"
                    android:layout_width="178dp"
                    android:layout_height="280dp"

                    android:layout_gravity=""
                    android:layout_marginStart="20dp"


                    android:layout_marginEnd="10dp"
                    android:elevation="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rocks"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium">

                </com.google.android.material.imageview.ShapeableImageView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:itemIconTint="@color/color_selector"
        app:itemTextColor="@color/color_selector"
        app:menu="@menu/bottom_menu"/>


</androidx.constraintlayout.widget.ConstraintLayout>
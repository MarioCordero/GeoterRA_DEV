<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home"
    tools:context=".ui.home.views.HomeView"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"

            android:orientation="vertical"
            android:backgroundTint="@color/white">

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="15dp"
                android:background="@drawable/white_rectangle_rounded2"
                android:elevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/about_us"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="22sp">
                </TextView>

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/droneImage"
                    android:layout_width="170dp"
                    android:layout_height="300dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/geoterraText"

                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                    android:src="@drawable/droneview"
                    android:elevation="10dp"
                    android:scaleType="centerCrop">

                </com.google.android.material.imageview.ShapeableImageView>

                <TextView
                    android:id="@id/geoterraText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="15dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/droneImage"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:text="GeoterRA: optimiza decisiones en proyectos geotérmicos."
                    android:lineSpacingExtra="8sp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/calibri_regular"
                    android:textSize="15sp">
                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:padding="15dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Proporcionamos información precisa, reducimos riesgos y maximizamos eficiencia. Equipo multidisciplinario, promovemos energías renovables y desarrollo sostenible."
                    android:textSize="17sp"
                    android:fontFamily="@font/calibri_regular"
                    android:justificationMode="inter_word">
                </TextView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rockLake"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"

                    android:layout_marginTop="30dp"

                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                    android:src="@drawable/rocklake"
                    android:elevation="10dp"
                    android:scaleType="centerCrop">
                </com.google.android.material.imageview.ShapeableImageView>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="150dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/endAbout"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/rocksImage"

                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8sp"
                    android:text="GeoterRA recopila datos geológicos de múltiples fuentes, incluyendo estudios de campo realizados por expertos y contribuciones de usuarios a través de la aplicación móvil. Integrando datos de bases de datos geológicas existentes, garantizamos una colección completa."
                    android:fontFamily="@font/calibri_regular"
                    android:textSize="15sp">
                </TextView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rocksImage"
                    android:layout_width="170dp"
                    android:layout_height="280dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/endAbout"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:elevation="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rocks"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium">
                </com.google.android.material.imageview.ShapeableImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>